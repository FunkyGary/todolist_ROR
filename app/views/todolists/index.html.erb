<div class="container">
  <table class="table table-striped table-condensed ">
   <% @todolists.each do |todolist| %>
     <tr>
       <td><%= todolist.title %></td>
       <td><%= todolist.description %></td>
       <td><%= todolist.date %></td>
       <td><%= link_to 'Edit', edit_todolist_path(todolist) %></td>
       <td><%= link_to 'Destroy', todolist_path(todolist), method: :delete, data:{ confirm: "Are you sure?" } %></td>
     </tr>
   <% end %>
  </table>
  <%= link_to '+ New Todo', new_todolist_path, class: "badge badge-dark" %>
</div>
